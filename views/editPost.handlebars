<div class='row'>
  <div class='col-auto'>
    <h2>Post Editor</h2>
  </div>
</div>

<form class='form new-post-form'>
  <div class='form-group'>
    <label for='post-name'>Post Name:</label>
    <input
      class='form-input'
      type='text'
      id='post-name'
      name='post-name'
      value='{{name}}'
    />
  </div>
  <div class='form-group'>
    <label for='post-desc'>Description:</label>
    <textarea
      class='form-input'
      id='post-desc'
      name='post-desc'
    >{{description}}</textarea>
  </div>
  <div class='form-group'>
    <button class='btn btn-primary submitEdit'>Submit</button>
  </div>
</form>

<script src='./js/edit.js'></script>