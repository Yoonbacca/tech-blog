<div class='row'>
  <div class='col-auto'>
    <h2>Post</h2>
  </div>
</div>

<div class='row mt-4'>
  <div class='col-md-6'>
    <h3>{{name}}</h3>
    <p>{{description}}</p>
    <p>Created by {{user.name}} on {{format_date date_created}}</p>
    <button
      class='btn btn-sm btn-danger'
      data-id='{{comment.id}}'
    >Comment</button>
  </div>

  {{#if comments.length}}
    <div class='col-md-6 comment-list'>
      <h3>Current Comments:</h3>

      {{#each comments as |comment|}}
        <div class='row mb-2'>
          <div class='col-md-8'>
            <h4><a href='/comment/{{comment.id}}'>{{comment.user}}</a></h4>
          </div>
        </div>
        <div class='row mb-2'>
          <div class='col-md-4'>
            <div class='d-flex justify-content-between'>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

<script src='./js/dashboard.js'></script>