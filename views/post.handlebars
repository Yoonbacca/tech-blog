<div class='row'>
  <div class='col-auto'>
  </div>
</div>

<div class='row mt-4'>
  <div class='col-md-6'>
    <h2>Post</h2>
    <h3>{{name}}</h3>
    <p>{{description}}</p>
    <p>Created by {{user.name}} on {{format_date date_created}}</p>
    {{#if logged_in}}
      <form class='form new-comment-form'>
        <div class='form-group'>
          <label for='comment-desc'>Leave your Comment:</label>
          <textarea
            class='form-input'
            id='comment-desc'
            name='comment-desc'
          ></textarea>
        </div>
        <div class='form-group'>
          <button type='submit' class='btn btn-primary'>Create</button>
        </div>
      </form>
    {{/if}}

  </div>

  <div class='col-md-6 comment-list'>
    <h2>Comments:</h2>

    {{#each comments}}
      <div class='row mb-2'>
        <div class='col-md-8'>
          <h4>{{this.description}}</h4>
          <p>Created by
            {{this.user.name}}
            on
            {{format_date this.date_created}}</p>
        </div>
      </div>
      <div class='row mb-2'>
        <div class='col-md-4'>
        </div>
      </div>
    {{/each}}
  </div>
</div>
<script src='./js/post.js'></script>